{
  "manifest_version": 2,
  "name": "peek stock",
  "description": "real-time TW stock crawler",
  "version": "1.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html",
     "default_title": "Peek!"
  },
  "background" : {
    "scripts" : ["background.js","js/jquery-3.3.1.min.js"],
    "persistent" : false
  },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}